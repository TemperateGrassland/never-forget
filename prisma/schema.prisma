generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String         @id @default(cuid())
  email                   String         @unique
  emailVerified           DateTime?
  createdAt               DateTime       @default(now())
  dateOfBirth             DateTime?
  firstName               String?
  isActive                Boolean        @default(true)
  lastName                String?
  phoneNumber             String?        @unique
  updatedAt               DateTime       @updatedAt
  hasReceivedWelcomeEmail Boolean        @default(false)
  stripeCustomerId        String?        @unique
  subscriptionEndsAt      DateTime?
  subscriptionId          String?        @unique
  subscriptionPlanId      String?
  subscriptionStartedAt   DateTime?
  subscriptionStatus      String?
  currentMonthDeliveries  Int       @default(0)
  lastUsageReset          DateTime?
  accounts                Account[]
  feedback                Feedback[]
  flowResponses           FlowResponse[]
  reminders               Reminder[]
  sessions                Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  type              String
  access_token      String?
  refresh_token     String?
  expires_at        Int?
  id_token          String?
  scope             String?
  token_type        String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  phoneNumber  String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Reminder {
  id                String            @id @default(uuid())
  title             String
  userId            String
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  isComplete        Boolean           @default(false)
  dueDate           DateTime?
  frequency         ReminderFrequency @default(NONE)
  advanceNoticeDays Int               @default(1)
  User              User              @relation(fields: [userId], references: [id])
}

model WaitlistEntry {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Feedback {
  id        String       @id @default(cuid())
  type      FeedbackType
  message   String
  userId    String?
  createdAt DateTime     @default(now())
  userAgent String?
  ipAddress String?
  user      User?        @relation(fields: [userId], references: [id])
}

model AnonymousFeedback {
  id        String   @id @default(cuid())
  template  String
  response  String
  metadata  Json?
  createdAt DateTime @default(now())
}

model FlowResponse {
  id          String   @id @default(cuid())
  flowToken   String   @unique
  flowName    String
  userId      String?
  phoneNumber String
  responses   Json
  metadata    Json?
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])

  @@index([flowName, createdAt])
  @@index([phoneNumber])
}

enum ReminderFrequency {
  NONE
  WEEKLY
  MONTHLY
  YEARLY
}

enum FeedbackType {
  COMPLEMENT
  CRITICISM
}

